<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layoutDirection="rtl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="5"

            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:hint="تعداد"


            android:id="@+id/edtEachTime"

            android:layout_alignParentLeft="true"
            android:focusable="true"
            android:enabled="true"
            android:maxLength="5"
            android:inputType="numberDecimal"
            />
            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                app:ms_hint="واحد"
                android:layout_marginBottom="5dp"
                android:layoutDirection="rtl"
                app:ms_enableFloatingLabel="false"
                app:ms_enableErrorLabel="false"
                app:ms_floatingLabelText="واحد"
                app:ms_baseColor="@color/grayText"
                app:ms_thickness="1dp"
                app:ms_arrowColor="@color/colorPrimary"
                app:ms_arrowSize="14dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/grayText"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/roze"
            android:text="مقدار مصرف در نوبت های مختلف در ادامه قابل ویرایش می‌باشد."/>
        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tagcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:container_background_color="#00000000"

            app:container_border_radius="0dp"
            app:container_gravity="right"
            app:horizontal_interval="10dp"
            app:tag_background_color="#9b9a9b"
            app:tag_border_color="@color/transparent"
            app:tag_border_width="0dp"
            app:tag_clickable="false"
            app:tag_corner_radius="10dp"
            app:tag_enable_cross="true"
            app:tag_horizontal_padding="15dp"
            app:tag_max_length="18"
            app:tag_text_color="@color/white"
            app:tag_text_direction="rtl"
            app:tag_text_size="14sp"
            android:visibility="gone"
            app:tag_cross_color="@color/white"

            app:tag_theme="none"
            app:tag_vertical_padding="10dp"
            app:vertical_interval="10dp" />

