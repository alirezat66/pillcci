<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="greencode.ir.pillcci.activities.ActivityAlarmManager">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardCat"
            android:layout_marginTop="-15dp"
           ></android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtRemind"
            android:visibility="gone"
            android:textSize="14sp"

            android:textColor="@color/colorAccent"
            android:text="داروی شما رو به اتمام است."
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtclock"
            android:visibility="visible"
            android:textSize="22dp"
            android:layout_below="@id/txtRemind"
            android:textColor="@color/colorAccent"
            android:text="ساعت : ۱۸:۳۰"
            android:layout_marginTop="12dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgLogo"
            android:layout_below="@id/txtclock"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/imgLogo"
            android:gravity="center_horizontal"

            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:id="@+id/txtMedName"
            android:text=""
            android:textColor="@color/VioletBlue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:visibility="gone"
            android:layout_marginRight="24dp"
            android:text=""
            android:layout_marginLeft="24dp"
            android:maxLines="4"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtMedName"
            android:maxLength="140"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/desc"
            android:layout_marginTop="12dp"
            android:id="@+id/layoutInfo"

            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_container"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/catImage"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/category"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:text=""
                    android:id="@+id/catName"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/grayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/unitImage"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/drug"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text=""
                    android:maxLines="1"
                    android:id="@+id/unitText"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/grayText"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutInfo"
            android:layout_marginTop="16dp"
            android:orientation="vertical"

            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp"
                android:textSize="18sp"
                android:id="@+id/btnUsage"
                android:animateLayoutChanges="true"

                android:textColor="@color/white"
                android:text="مصرف می کنم"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ripple_green_use"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp"
                android:textSize="18sp"
                android:id="@+id/btnSnooz"
                android:animateLayoutChanges="true"

                android:layout_marginBottom="16dp"
                android:text="یادآوری در ۱۰ دقیقه دیگر"
                android:background="@drawable/ripple_yelow_snooz"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp"
                android:textSize="18sp"
                android:animateLayoutChanges="true"

                android:id="@+id/btnCancel"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ripple_red"
                android:text="مصرف نمی کنم"
                android:textColor="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text=""
                android:id="@+id/txtMessage"
                android:visibility="gone"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/layoutOk"
                android:visibility="gone"
                android:animateLayoutChanges="true"

                android:layout_marginBottom="16dp"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_gray"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="بازگشت"
                    android:id="@+id/btnReturn"
                    android:layout_marginRight="4dp"
                    android:textSize="18sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_green_use"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="تایید"
                    android:id="@+id/btnOk"
                    android:layout_marginLeft="4dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
