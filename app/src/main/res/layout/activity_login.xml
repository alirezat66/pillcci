<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="greencode.ir.pillcci.activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/header_login"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/header"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lyOne"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16sp"
                        android:id="@+id/error"
                        android:textColor="@color/hintColor"
                        android:gravity="center_horizontal"
                        android:visibility="invisible"
                        android:layout_marginTop="12dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/VioletBlue"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:gravity="center_horizontal"

                        android:textColorHint="@color/hintColor"
                        android:textColorLink="@color/VioletBlue"
                        android:inputType="phone"
                        android:selectAllOnFocus="true"

                        android:maxLength="11"
                        android:hint="شماره تلفن همراه"
                        android:id="@+id/edtUser"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/VioletBlue"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/edtPass"
                        android:gravity="center_horizontal"
                        android:textColorHint="@color/hintColor"
                        android:hint="کلمه عبور خود را وارد کنید"
                        android:layout_marginRight="24dp"
                        android:textColorLink="@color/VioletBlue"
                        android:inputType="textPassword"
                        android:selectAllOnFocus="true"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="نمایش رمز عبور"
                            android:textSize="16sp"
                            android:id="@+id/checkboxShowPass"
                            android:textColor="@color/grayText"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="24dp"
                        android:paddingLeft="24dp"
                        android:background="@drawable/ripple_blue"
                        android:text="ورود"
                        android:id="@+id/btnLogin"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp"
                        android:id="@+id/forgetPass"
                        android:textSize="16sp"
                        android:textColor="@color/grayText"
                        android:layout_marginRight="24dp"
                        android:gravity="center_horizontal"
                        android:text="کلمه عبور خود را فراموش کرده ام"
                        />


                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ایجاد حساب کاربری"
                    android:textColor="@color/VioletBlue"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/btnRegiser"
                    android:textSize="16.0sp"
                    android:layout_below="@id/lyOne"
                    android:background="@color/transparent"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
