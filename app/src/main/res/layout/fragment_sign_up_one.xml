<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/header_login"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/header"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lyOne"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/VioletBlue"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:selectAllOnFocus="true"

                        android:layout_marginRight="24dp"
                        android:gravity="center_horizontal"
                        android:maxLength="11"
                        android:textColorHint="@color/hintColor"
                        android:textColorLink="@color/VioletBlue"
                        android:inputType="phone"
                        android:hint="شماره تلفن همراه"
                        android:id="@+id/edtUser"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="16sp"
                        android:textColor="@color/grayText"
                        android:layout_marginRight="24dp"
                        android:gravity="center_horizontal"
                        android:text="کد فعالسازی به شماره تلفن همراه شماارسال خواهد شد"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/VioletBlue"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/edtCode"
                        android:selectAllOnFocus="true"

                        android:gravity="center_horizontal"
                        android:textColorHint="@color/hintColor"
                        android:hint="کد معرف"
                        android:maxLength="20"
                        android:layout_marginRight="24dp"
                        android:textColorLink="@color/VioletBlue"


                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="16sp"
                        android:textColor="@color/grayText"
                        android:layout_marginRight="24dp"
                        android:gravity="center_horizontal"
                        android:text="وارد کردن کد معرف اختیاری است"
                        />



                </LinearLayout>
                <Button
                    android:layout_below="@id/lyOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ایجاد حساب کاربری"
                    android:textColor="@color/VioletBlue"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/btnRegiser"
                    android:textSize="16.0sp"
                    android:gravity="bottom"
                    android:background="@color/transparent"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
