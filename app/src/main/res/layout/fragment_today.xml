<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true"
    android:background="@color/white"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/lyOne"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize">
               <android.support.v7.widget.AppCompatImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_close_grey"
                   android:id="@+id/imgClose"
                   android:visibility="gone"
                   android:padding="16dp"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="16dp"/>
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#00000000"
                    android:hint="جستجو"
                   android:textSize="16sp"
                   android:layout_toRightOf="@id/imgClose"
                   android:visibility="gone"
                   android:inputType="text"
                   android:id="@+id/edtSearch"
                   android:selectAllOnFocus="true"

                   android:imeOptions="actionSearch"
                   android:textColor="@color/black"
                   android:paddingRight="16dp"
                   android:textColorHint="@color/grayLiteText"
                   android:paddingLeft="16dp"
                   />
               <TextView
                   style="@style/BigBlue_18"
                   android:textSize="24sp"
                   android:layout_marginRight="16dp"
                   android:layout_marginTop="16dp"
                   android:id="@+id/txtToday"
                   android:text="چهارشنبه ۲۲ فروردین"/>
                    <ImageView
                   android:layout_width="?attr/actionBarSize"
                   android:layout_height="?attr/actionBarSize"
                   android:src="@drawable/search"
                   android:padding="16dp"
                   android:id="@+id/imgSearch"
                   android:layout_alignParentLeft="true"
                   />
           </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            style="@style/NormalTextBlack"
            android:id="@+id/countOfDay"/>
        <TextView
            style="@style/NormalTextBlack"
            android:text="دارو ثبت شده برای امروز"
            />
        <TextView
            style="@style/NormalTextBlack"
            android:text=" | "/>
        <TextView
            style="@style/NormalTextBlack"
            android:id="@+id/countOfUsed"/>
        <TextView
            style="@style/NormalTextBlack"
            android:text="دارو مصرف شده"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:id="@+id/difrenceLayout"

           android:layout_marginRight="16dp"
           android:orientation="horizontal">

           <TextView
        style="@style/AccentTextNormal"
        android:id="@+id/txtNextRemind"/>
           <TextView
        style="@style/AccentTextNormal"
        android:text=" تا زمان مصرف داروی بعدی"/>


       </LinearLayout>
       </LinearLayout>
       <android.support.design.widget.FloatingActionButton
           android:layout_width="56.0dp"
           android:layout_height="56.0dp"
           app:srcCompat="@drawable/ic_add_white_24dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginRight="16dp"
           android:layout_alignParentRight="true"
           app:backgroundTint="@color/VioletBlue"
           android:layout_marginBottom="12dp"
           android:id="@+id/fabBtn"
           />
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/lyOne"
           android:layout_marginTop="12dp"
           android:clipToPadding="false"
           android:paddingBottom="100dp"
           android:id="@+id/list"></android.support.v7.widget.RecyclerView>
   </RelativeLayout>
</RelativeLayout>
