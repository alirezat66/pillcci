<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true"
    android:background="@color/white"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/lyOne"
           android:orientation="vertical">
    <TextView
        style="@style/BigBlue_18"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtToday"
        android:text="چهارشنبه ۲۲ فروردین"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            style="@style/NormalTextBlack"
            android:id="@+id/countOfDay"/>
        <TextView
            style="@style/NormalTextBlack"
            android:text="دارو ثبت شده برای امروز"
            />
        <TextView
            style="@style/NormalTextBlack"
            android:text=" | "/>
        <TextView
            style="@style/NormalTextBlack"
            android:id="@+id/countOfUsed"/>
        <TextView
            style="@style/NormalTextBlack"
            android:text="دارو مصرف شده"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:id="@+id/difrenceLayout"

           android:layout_marginRight="16dp"
           android:orientation="horizontal">

           <TextView
        style="@style/AccentTextNormal"
        android:id="@+id/txtNextRemind"/>
           <TextView
        style="@style/AccentTextNormal"
        android:text=" تا زمان مصرف داروی بعدی"/>
           <cn.iwgang.countdownview.CountdownView

               android:id="@+id/countDown"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               app:isHideTimeBackground="false"
               app:timeBgRadius="10dp"
               app:isShowDay="false"
               app:isShowHour="true"
               app:isShowMillisecond="false"
               app:isShowMinute="true"
               app:isShowSecond="true"
               app:isShowTimeBgDivisionLine="false"
               app:suffixGravity="center"

               app:suffixTextColor="#000000"
               app:suffixTextSize="16sp"
               android:layout_marginRight="8dp"
               app:timeBgColor="#FF5000"
               app:timeTextColor="#FFFFFF"

               app:timeTextSize="16sp"/>

       </LinearLayout>
       </LinearLayout>
       <android.support.design.widget.FloatingActionButton
           android:layout_width="56.0dp"
           android:layout_height="56.0dp"
           app:srcCompat="@drawable/ic_add_white_24dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginRight="16dp"
           app:backgroundTint="@color/VioletBlue"
           android:layout_marginBottom="12dp"
           android:id="@+id/fabBtn"
           />
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/lyOne"
           android:layout_marginTop="12dp"
           android:id="@+id/list"></android.support.v7.widget.RecyclerView>
   </RelativeLayout>
</RelativeLayout>
