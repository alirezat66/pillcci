<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="5dp"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    android:minHeight="?attr/actionBarSize"
    tools:ignore="VectorDrawableCompat"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight = "true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_arrow_forward"

            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:id="@+id/imgAdd"
            app:srcCompat="@drawable/add_blue_icon"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/imgEdit"
            android:background="@color/transparent"
            android:src="@drawable/edit_blue_icon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgAdd"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/VioletBlue"
            android:textSize="20sp"
            android:maxLines="1"
            android:text="تماس های اضطراری"
            android:layout_toLeftOf="@id/img_back"
            android:layout_centerInParent="true"
            android:id="@+id/txtTitle"/>


    </RelativeLayout>

</android.support.v7.widget.Toolbar>