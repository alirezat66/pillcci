<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true"
    android:background="@color/backColor"
    android:fillViewport="true"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:id="@+id/header"
        android:layout_alignParentTop="true">
        <TextView
            style="@style/BigBlue_18"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/txtToday"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="سایر موارد"/>

    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardProfile"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/logoImg"
                app:srcCompat="@drawable/ic_profile"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="24dp"
                android:id="@+id/profileImg"
                android:layout_height="32dp"
                android:visibility="gone"
                android:src="@drawable/user_pn"

                />
            <TextView
                style="@style/BigBlue"
                android:text="پروفایل کاربری"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardCall"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_call"
                />
            <TextView
                style="@style/BigBlue"
                android:textColor="@color/grayText"
                android:text="تماس های ضروری"
                android:textSize="16dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardBot"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_android_grey_600"
                />
            <TextView
                style="@style/BigBlue"
                android:textColor="@color/grayText"
                android:text="بات تلگرام"
                android:textSize="16dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardSetting"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_setting"
                />
            <TextView
                style="@style/BigBlue"
                android:text="تنظیمات"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareCard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_share"
                />
            <TextView
                style="@style/BigBlue"
                android:text="معرفی به دوستان"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lawCard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_sharayet"
                />
            <TextView
                style="@style/BigBlue"
                android:text="شرایط و مقررات"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardDeleteAccount"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"

                app:srcCompat="@drawable/ic_off"
                />
            <TextView
                style="@style/BigBlue"
                android:text="حذف حساب کاربری"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardExit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_exit"
                />
            <TextView
                style="@style/BigBlue"
                android:text="خروج"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
