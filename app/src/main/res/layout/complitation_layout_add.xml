<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:background="@color/backColor">
    <TextView
        style="@style/BigBlue_18"
        android:text="بازه مصرف"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        />


    <me.omidh.liquidradiobutton.LiquidRadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lrb_strokeWidth="1dp"
        app:lrb_explodeCount="3"
        android:gravity="right|center_vertical"
        app:lrb_outterPadding="8dp"
        app:lrb_strokeRadius="10dp"
        app:lrb_inAnimDuration="500"
        app:lrb_outAnimDuration="500"

            app:lrb_checkedColor="@color/colorPrimary"
             app:lrb_unCheckedColor="@color/grayText"
        android:textColor="@color/grayText"

        android:text="مصرف مداوم"
            android:textSize="16sp"
            android:checked="true"
            android:id="@+id/radioAll"
            android:layoutDirection="rtl"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            >
            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                app:lrb_outterPadding="8dp"
                app:lrb_strokeRadius="10dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"

                app:lrb_checkedColor="@color/colorPrimary"
                app:lrb_unCheckedColor="@color/grayText"
                android:textColor="@color/grayText"
                android:text="مدت زمان مصرف"
                android:textSize="16sp"
                android:id="@+id/radioTime"
                android:layoutDirection="rtl"
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="4"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="-10dp"
                android:id="@+id/totalTimeUseDay"
                android:inputType="number"
                android:enabled="false"
                android:textColor="@color/grayText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:text="روز"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            >
            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                app:lrb_outterPadding="8dp"
                app:lrb_strokeRadius="10dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"

                app:lrb_checkedColor="@color/colorPrimary"
                app:lrb_unCheckedColor="@color/grayText"
                android:textColor="@color/grayText"
                android:text="مقدار کل تجویز شده"
                android:textSize="16sp"
                android:id="@+id/radioCount"
                android:layoutDirection="rtl"
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="4"
                android:gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                android:id="@+id/edtCountDay"
                android:enabled="false"

                android:maxLength="5"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:textColor="@color/grayText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:text=""
                android:id="@+id/txtUnit"/>
        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLiteText"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:orientation="horizontal"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        >
        <TextView
            style="@style/BigBlue_18"
            android:text="یادآوری تهیه دارو"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            />
        <com.zcw.togglebutton.ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layoutDirection="rtl">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:textSize="18sp"
            android:text="مقدار داروی موجود"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ems="4"
            android:visibility="gone"
            android:layout_marginTop="-10dp"
            android:id="@+id/countOfHave"
            android:focusable="false"
            android:textColor="@color/grayText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:textSize="18sp"
            android:visibility="gone"
            android:text="روز"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layoutDirection="rtl">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:textSize="18sp"
            android:text="یاداوری در"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ems="4"
            android:layout_marginTop="-10dp"
            android:id="@+id/beforReminding"
            android:focusable="false"
            android:textColor="@color/grayText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:textSize="18sp"
            android:text="روز قبل اتمام"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:theme="@style/MyEditText"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="زمان یادآوری"
            android:id="@+id/edtUseRes"
            android:maxLines="1"
            android:textColor="@color/grayText"
            />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>