<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/backColor">
    <TextView
        style="@style/BigBlue_18"
        android:text="بازه مصرف"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        />


    <me.omidh.liquidradiobutton.LiquidRadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lrb_strokeWidth="1dp"
        app:lrb_explodeCount="3"
        android:gravity="right|center_vertical"
        app:lrb_outterPadding="8dp"
        app:lrb_strokeRadius="10dp"
        app:lrb_inAnimDuration="500"
        app:lrb_outAnimDuration="500"

            app:lrb_checkedColor="@color/colorPrimary"
             app:lrb_unCheckedColor="@color/grayText"
        android:textColor="@color/grayText"

        android:text="مصرف مداوم"
            android:textSize="16sp"
            android:checked="true"
            android:id="@+id/radioAll"
            android:layoutDirection="rtl"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            >
            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                app:lrb_outterPadding="8dp"
                app:lrb_strokeRadius="10dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"

                app:lrb_checkedColor="@color/colorPrimary"
                app:lrb_unCheckedColor="@color/grayText"
                android:textColor="@color/grayText"
                android:text="مدت زمان مصرف"
                android:textSize="16sp"
                android:id="@+id/radioTime"
                android:layoutDirection="rtl"
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="4"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"

                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="-10dp"
                android:id="@+id/totalTimeUseDay"
                android:inputType="number"
                android:enabled="true"
                android:textColor="@color/grayText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:text="روز"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            >
            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                app:lrb_outterPadding="8dp"
                app:lrb_strokeRadius="10dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"

                app:lrb_checkedColor="@color/colorPrimary"
                app:lrb_unCheckedColor="@color/grayText"
                android:textColor="@color/grayText"
                android:text="مقدار کل تجویز شده"
                android:textSize="16sp"
                android:id="@+id/radioCount"
                android:layoutDirection="rtl"
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="4"
                android:imeOptions="actionDone"
                android:gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                android:id="@+id/edtCountDay"
                android:enabled="true"
                android:selectAllOnFocus="true"
                android:maxLength="5"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:textColor="@color/grayText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:text=""
                android:id="@+id/txtUnit"/>
        </LinearLayout>







</LinearLayout>