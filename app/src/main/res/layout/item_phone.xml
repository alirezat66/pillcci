<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            android:src="@drawable/no_image_person"
            android:layout_marginBottom="8dp"
            android:id="@+id/img_user"

            />
        <ImageView
        android:id="@+id/img_logo"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/no_image_person"
        android:layout_width="56dp"
        />
        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/lyEdit">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/img_call"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_call"/>
        </RelativeLayout>
        <RelativeLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lyEdit"
        android:id="@+id/lyDelete">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_delete"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_delete_grey_300"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_user">
            <TextView
                style="@style/NormalTextBlack"
                android:text="رضا تقی زاده"
                android:layout_centerVertical="true"
                android:layout_below="@id/img_logo"
                android:id="@+id/txtPhone"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""
                android:id="@+id/txtNumber"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayLiteText"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"></LinearLayout>

    </RelativeLayout>


    </androidx.cardview.widget.CardView>
