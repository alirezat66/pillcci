<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:id="@+id/header"
            android:text="ویرایش استفاده"
            android:textSize="16.0sp"
            android:textColor="#646464"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteAllLayout"
            android:layout_below="@id/header"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/logoDelete"
                android:src="@drawable/delete_icon"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD0021B"
                android:textSize="14.0sp"
                android:layout_toLeftOf="@id/logoDelete"
                android:layout_marginRight="12dp"
                android:text="مصرف نکرده ام. این دوز را از تعداد کل حذف کن"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteAndAdd"
            android:layout_below="@id/deleteAllLayout"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/logoadd"
                android:layout_centerVertical="true"
                android:src="@drawable/add_event_icon"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF646464"
                android:textSize="14.0sp"
                android:layout_toLeftOf="@id/logoadd"
                android:layout_marginRight="12dp"
                android:text="مصرف نکرده ام.این دوز را نگه‌دار و به انتهای زمانبندی اضافه کن"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/useLay"
            android:layout_below="@id/deleteAndAdd"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/logoUse"
                app:srcCompat="@drawable/success_icon"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:textSize="14.0sp"
                android:layout_toLeftOf="@id/logoUse"
                android:layout_marginRight="12dp"

                android:text="مصرف کرده ام."/>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/useLay"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:src="@drawable/arrow_left_icon"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>