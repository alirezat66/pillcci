<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:padding="16dp"
    app:cardElevation="4dp"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="یادآوری تهیه دارو"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"/>

            <com.zcw.togglebutton.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/toogleReminder"
                android:layout_marginRight="8dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:id="@+id/reminderDayLayout"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="18sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:text="مقدار داروی موجود"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtCountOfPill"
                android:ems="3"
                android:selectAllOnFocus="true"
                android:gravity="center_horizontal"
                android:enabled="false"
                android:maxLength="4"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="18sp"
                android:id="@+id/txtUnitReminder"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:visibility="gone"
            android:id="@+id/remiderBeforLay"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="18sp"
                android:text="یادآوری در "/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtReminderDay"
                android:ems="2"

                android:gravity="center_horizontal"
                android:enabled="false"
                android:maxLength="2"
                android:selectAllOnFocus="true"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="18sp"
                android:text="روز قبل اتمام"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
