<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlText"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_logo"
                android:layout_alignParentLeft="true"
                android:layout_height="72dp"
                android:layout_margin="16dp"
                android:src="@drawable/pill_avator"
                android:layout_centerVertical="true"
                android:layout_width="72dp"
                 />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/textLayout"
                android:layout_toRightOf="@id/img_logo"
                android:layout_marginRight="8dp"
                android:layoutDirection="rtl"
                >
                <TextView
                    style="@style/BigGray"
                    android:text=""
                    android:id="@+id/txtMedName"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="6dp">
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text="دسته:"/>
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text=""
                        android:id="@+id/txtCatName"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="6dp">
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text="آخرین مصرف:"/>
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text=""
                        android:id="@+id/txtUseTime"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="6dp">
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text="مصرف بعدی:"/>
                    <TextView
                        style="@style/NormalTextBlack"
                        android:text=""
                        android:id="@+id/txtNextTime"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>