
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/header_login"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/header"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/header">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lyOne"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/VioletBlue"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:gravity="center_horizontal"
                            android:maxLength="11"
                            android:layout_marginTop="24dp"
                            android:hint="نام کاربری"
                            android:selectAllOnFocus="true"

                            android:enabled="false"
                            android:textColorHint="@color/hintColor"
                            android:textColorLink="@color/VioletBlue"
                            android:inputType="phone"
                            android:id="@+id/edtUser"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/VioletBlue"
                            android:layout_marginLeft="24dp"
                            android:id="@+id/edtPass"
                            android:gravity="center_horizontal"
                            android:textColorHint="@color/hintColor"
                            android:hint="کلمه عبور"
                            android:selectAllOnFocus="true"

                            android:maxLength="10"
                            android:layout_marginRight="24dp"
                            android:textColorLink="@color/VioletBlue"
                            android:inputType="textPassword"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/VioletBlue"
                            android:layout_marginLeft="24dp"
                            android:id="@+id/edtPassRetry"
                            android:gravity="center_horizontal"
                            android:textColorHint="@color/hintColor"
                            android:hint="تکرار کلمه عبور"
                            android:selectAllOnFocus="true"

                            android:maxLength="10"
                            android:layout_marginRight="24dp"
                            android:textColorLink="@color/VioletBlue"
                            android:inputType="textPassword"

                            />
                        <Button
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_blue"
                            android:text="ایجاد حساب کاربری"
                            android:id="@+id/btnRegiser"

                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                    <Button
                        android:layout_below="@id/lyOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تغییر شماره تلفن همراه"
                        android:textColor="@color/VioletBlue"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/btnChangePhone"
                        android:textSize="16.0sp"
                        android:gravity="bottom"
                        android:background="@color/transparent"/>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


</RelativeLayout>
