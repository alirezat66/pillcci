<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/top"
       app:cardElevation="4dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:id="@+id/header"
       android:background="@color/colorPrimary"
       android:layout_alignParentTop="true">
      <android.support.v7.widget.AppCompatImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_close_grey"
          android:layout_marginTop="22dp"
          android:id="@+id/imgClose"
          android:visibility="gone"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="16dp"/>
      <EditText
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#00000000"
          android:hint="جستجو"
          android:textSize="16sp"
          android:layout_toRightOf="@id/imgClose"
          android:visibility="gone"
          android:id="@+id/edtSearch"
          android:selectAllOnFocus="true"
          android:textColor="@color/white"
          android:paddingRight="16dp"
          android:textColorHint="@color/grayLiteText"
          android:paddingLeft="16dp"
          />
      <TextView
          style="@style/BigBlue_18"
          android:textSize="18sp"
          android:layout_centerVertical="true"
          android:layout_marginRight="16dp"
          android:id="@+id/txtToday"
          android:textColor="@color/white"
          android:layout_alignParentRight="true"
          android:text="سبد دارو"/>
      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"

          android:src="@drawable/ic_search_white"
          android:id="@+id/imgSearch"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="16dp"/>
   </RelativeLayout>
   </android.support.v7.widget.CardView>
   <android.support.design.widget.FloatingActionButton
       android:layout_width="56.0dp"
       android:layout_height="56.0dp"
       app:srcCompat="@drawable/ic_add_white_24dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginRight="16dp"
       android:layout_alignParentRight="true"
       app:backgroundTint="@color/VioletBlue"
       android:layout_marginBottom="12dp"
       android:id="@+id/fabBtn"
       />
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/top"
       android:layoutDirection="rtl"
       android:id="@+id/list2"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
