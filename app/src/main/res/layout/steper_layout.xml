<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layoutDirection="rtl"
    android:layout_marginTop="16dp"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_checked"
            android:id="@+id/checkedOne"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyNumberOne"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_green"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10.0"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اطلاعات کلی"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/lyNumberOne"
            android:id="@+id/txtStepOne"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/lyStepOne"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:background="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/lyTwo"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_checked"
            android:id="@+id/checkedTwo"
            android:visibility="gone"
            />
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/lyNumberTwo"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_gray"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10.0"
                android:text="2"

                android:id="@+id/lyNumberTwoText"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نحوه مصرف"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/lyNumberTwo"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/grayLiteText"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:id="@+id/txtStepTwo"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/lyThree"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_checked"
            android:id="@+id/checkedThree"
            android:visibility="gone"
            />
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/lyNumberThree"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_gray"
                android:gravity="center"
                android:id="@+id/lyNumberThreeText"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10.0"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بازه مصرف"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/lyNumberThree"
            android:layout_marginRight="4dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/grayLiteText"
            android:textSize="16sp"
            android:id="@+id/txtStepThree"
            />

    </RelativeLayout>
</LinearLayout>