<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@color/backColor"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <include layout="@layout/complitation_layout_add"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reminderLayout"
            android:visibility="visible"
            android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="8dp"
              android:background="@color/grayLiteText"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="یادآوری تهیه دارو"
                    android:textSize="22sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/VioletBlue"/>

                <com.zcw.togglebutton.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/toogleReminder"
                    android:layout_marginRight="8dp"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayText"
                    android:textSize="18sp"
                    android:text="مقدار داروی موجود"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtCountOfPill"
                    android:ems="3"
                    android:selectAllOnFocus="true"
                    android:gravity="center_horizontal"
                    android:enabled="false"
                    android:maxLength="4"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayText"
                    android:textSize="18sp"
                    android:id="@+id/txtUnitReminder"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayText"
                    android:textSize="18sp"
                    android:text="یادآوری در "/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtReminderDay"
                    android:ems="2"

                    android:gravity="center_horizontal"
                    android:enabled="false"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayText"
                    android:textSize="18sp"
                    android:text="روز قبل اتمام"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="ذخیره و ادامه"
                android:background="@drawable/ripple_green_dark"
                android:textColor="@color/white"
                android:id="@+id/btnInsert"
                android:textSize="16.0sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="بازگشت به نحوه مصرف"
                android:id="@+id/btnDelete"
                android:background="@drawable/ripple_red"
                android:textColor="@color/white"
                android:textSize="16.0sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
